<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zavierdev.todoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestApiTest">
        <activity android:name="com.zavierdev.todoapp.ui.deletetodoitem.DeleteTodoItemActivity"></activity>
        <activity android:name="com.zavierdev.todoapp.ui.updatetodoitem.UpdateTodoActivity" />
        <activity android:name="com.zavierdev.todoapp.ui.addtodoitem.AddTodoActivity" />
        <activity android:name="com.zavierdev.todoapp.ui.listtodo.ListTodoActivity" />
        <activity android:name="com.zavierdev.todoapp.ui.home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>